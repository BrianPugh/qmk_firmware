# Keymap-specific build options

# Enable mouse keys (already enabled by default for madromys, but explicit is good)
MOUSEKEY_ENABLE = yes

# RGB lighting (NeoPixel LEDs)
RGBLIGHT_ENABLE = yes
WS2812_DRIVER = vendor

# Uncomment to enable features as needed:
# TAP_DANCE_ENABLE = yes    # Different actions for tap vs hold vs double-tap
# COMBO_ENABLE = yes        # Trigger actions by pressing multiple keys together
# KEY_OVERRIDE_ENABLE = yes # Override specific key combinations
